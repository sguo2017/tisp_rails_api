<%= form_for @serv_offer, :html => { :class => "form-horizontal serv_offer" } do |f| %>

  <% if @serv_offer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@serv_offer.errors.count, "error") %> prohibited this serv_offer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @serv_offer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :serv_title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :serv_title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:serv_title) %>
  </div>
  <div class="form-group">
    <%= f.label :serv_detail, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :serv_detail, :class => 'form-control' %>
    </div>
    <%=f.error_span(:serv_detail) %>
  </div>
  <div class="form-group">
    <%= f.label :serv_imges, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :serv_imges, :class => 'form-control' %>
    </div>
    <%=f.error_span(:serv_imges) %>
  </div>
  <div class="form-group">
    <%= f.label :serv_catagory, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :serv_catagory, :class => 'form-control' %>
    </div>
    <%=f.error_span(:serv_catagory) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                serv_offers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
