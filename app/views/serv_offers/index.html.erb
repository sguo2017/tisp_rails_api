<div class="page-header">
  <%=render 'serv_offers/search'%>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</youtï¼šfixeddiv>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:serv_title) %></th>
      <th><%= model_class.human_attribute_name(:serv_detail) %></th>
      <th><%= model_class.human_attribute_name(:serv_imges) %></th>
      <th><%= model_class.human_attribute_name(:serv_catagory) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody style="word-break:break-all;">
    <% @serv_offers.each do |serv_offer| %>
      <tr>
        <td><%= link_to serv_offer.id, serv_offer_path(serv_offer) %></td>
        <td><%= serv_offer.serv_title %></td>
        <td><%= serv_offer.serv_detail %></td>
        <td style='width:18% !important;'><image class="media-object" src="<%= serv_offer.serv_imges %>"/></td>
        <td><%= serv_offer.serv_catagory %></td>
        <td><%= serv_offer.user_id %></td>
        <td><%=l serv_offer.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      serv_offer_path(serv_offer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_serv_offer_path(serv_offer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      serv_offer_path(serv_offer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @serv_offers %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_serv_offer_path,
            :class => 'btn btn-primary' %>
