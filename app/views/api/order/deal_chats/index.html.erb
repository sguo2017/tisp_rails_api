<%- model_class = DealChat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:deal_id) %></th>
      <th><%= model_class.human_attribute_name(:serv_offer_id) %></th>
      <th><%= model_class.human_attribute_name(:serv_offer_user_name) %></th>
      <th><%= model_class.human_attribute_name(:serv_offer_titile) %></th>
      <th><%= model_class.human_attribute_name(:lately_chat_content) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deal_chats.each do |deal_chat| %>
      <tr>
        <td><%= link_to deal_chat.id, deal_chat_path(deal_chat) %></td>
        <td><%= deal_chat.deal_id %></td>
        <td><%= deal_chat.serv_offer_id %></td>
        <td><%= deal_chat.serv_offer_user_name %></td>
        <td><%= deal_chat.serv_offer_titile %></td>
        <td><%= deal_chat.lately_chat_content %></td>
        <td><%=l deal_chat.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      deal_chat_path(deal_chat), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_deal_chat_path(deal_chat), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      deal_chat_path(deal_chat),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @deal_chats %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_deal_chat_path,
            :class => 'btn btn-primary' %>
