<%- model_class = DealChatDetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:deal_id) %></th>
      <th><%= model_class.human_attribute_name(:chat_content) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:catalog) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deal_chat_details.each do |deal_chat_detail| %>
      <tr>
        <td><%= link_to deal_chat_detail.id, deal_chat_detail_path(deal_chat_detail) %></td>
        <td><%= deal_chat_detail.deal_id %></td>
        <td><%= deal_chat_detail.chat_content %></td>
        <td><%= deal_chat_detail.user_id %></td>
        <td><%= deal_chat_detail.catalog %></td>
        <td><%=l deal_chat_detail.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      deal_chat_detail_path(deal_chat_detail), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_deal_chat_detail_path(deal_chat_detail), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      deal_chat_detail_path(deal_chat_detail),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @deal_chat_details %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_deal_chat_detail_path,
            :class => 'btn btn-primary' %>
