<%- model_class = Chat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:deal_id) %>:</strong></dt>
  <dd><%= @chat.deal_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chat_content) %>:</strong></dt>
  <dd><%= @chat.chat_content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @chat.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:catalog) %>:</strong></dt>
  <dd><%= @chat.catalog %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              chats_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_chat_path(@chat), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              chat_path(@chat),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
