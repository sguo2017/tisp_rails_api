<%- model_class = Deal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:serv_offer_title) %></th>
      <th><%= model_class.human_attribute_name(:serv_offer_id) %></th>
      <th><%= model_class.human_attribute_name(:offer_user_id) %></th>
      <th><%= model_class.human_attribute_name(:request_user_id) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:connect_time) %></th>
      <th><%= model_class.human_attribute_name(:deal_time) %></th>
      <th><%= model_class.human_attribute_name(:finish_time) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= link_to deal.id, deal_path(deal) %></td>
        <td><%= deal.serv_offer_title %></td>
        <td><%= deal.serv_offer_id %></td>
        <td><%= deal.offer_user_id %></td>
        <td><%= deal.request_user_id %></td>
        <td><%= link_to deal.status,{:controller => "order_items", :action => "index", :deal_id => deal.id},{:deal_id => deal.id} %></td>
        <td><%= deal.connect_time %></td>
        <td><%= deal.deal_time %></td>
        <td><%= deal.finish_time %></td>
        <td><%=l deal.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      deal_path(deal), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_deal_path(deal), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      deal_path(deal),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @deals %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_deal_path,
            :class => 'btn btn-primary' %>
