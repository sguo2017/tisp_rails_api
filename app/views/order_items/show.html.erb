<%- model_class = OrderItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:deal_id) %>:</strong></dt>
  <dd><%= @order_item.deal_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serv_offer_id) %>:</strong></dt>
  <dd><%= @order_item.serv_offer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serv_offer_user_name) %>:</strong></dt>
  <dd><%= @order_item.serv_offer_user_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serv_offer_titile) %>:</strong></dt>
  <dd><%= @order_item.serv_offer_titile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lately_chat_content) %>:</strong></dt>
  <dd><%= @order_item.lately_chat_content %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              order_items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_item_path(@order_item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_item_path(@order_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
