<%- model_class = SysMsg -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_name) %>:</strong></dt>
  <dd><%= @sys_msg.user_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:action_title) %>:</strong></dt>
  <dd><%= @sys_msg.action_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:action_desc) %>:</strong></dt>
  <dd><%= @sys_msg.action_desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @sys_msg.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sys_msgs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sys_msg_path(@sys_msg), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sys_msg_path(@sys_msg),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
