<%- model_class = Favorite -%>
<div class="page-header">
  <%=render 'favorites/search'%>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:obj_id) %></th>
      <th><%= model_class.human_attribute_name(:obj_type) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= link_to favorite.id, favorite_path(favorite) %></td>
        <td><%= favorite.obj_id %></td>
        <td><%= favorite.obj_type %></td>
        <td><%= favorite.user_id %></td>
        <td><%=l favorite.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      favorite_path(favorite), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_favorite_path(favorite), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      favorite_path(favorite),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @favorites %>
<br/>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_favorite_path,
            :class => 'btn btn-primary' %>
