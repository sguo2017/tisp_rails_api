<%= form_for @order, :html => { :class => "form-horizontal order" } do |f| %>

  <% if @order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :serv_offer_title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :serv_offer_title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:serv_offer_title) %>
  </div>
  <div class="form-group">
    <%= f.label :serv_offer_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :serv_offer_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:serv_offer_id) %>
  </div>
  <div class="form-group">
    <%= f.label :offer_user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :offer_user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:offer_user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :request_user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :request_user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:request_user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  <div class="form-group">
    <%= f.label :connect_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :connect_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:connect_time) %>
  </div>
  <div class="form-group">
    <%= f.label :order_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :order_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:order_time) %>
  </div>
  <div class="form-group">
    <%= f.label :finish_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :finish_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:finish_time) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
