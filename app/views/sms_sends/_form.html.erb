<%= form_for @sms_send, :html => { :class => "form-horizontal sms_send" } do |f| %>

  <% if @sms_send.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sms_send.errors.count, "error") %> prohibited this sms_send from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sms_send.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :recv_num, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :recv_num, :class => 'form-control' %>
    </div>
    <%=f.error_span(:recv_num) %>
  </div>
  <div class="form-group">
    <%= f.label :send_content, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :send_content, :class => 'form-control' %>
    </div>
    <%=f.error_span(:send_content) %>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :state, :class => 'form-control' %>
    </div>
    <%=f.error_span(:state) %>
  </div>
  <div class="form-group">
    <%= f.label :sms_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sms_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sms_type) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sms_sends_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
