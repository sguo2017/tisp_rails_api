<%- model_class = Good -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:serv_title) %>:</strong></dt>
  <dd><%= @good.serv_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serv_detail) %>:</strong></dt>
  <dd><%= @good.serv_detail %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serv_imges) %>:</strong></dt>
  <dd><%= @good.serv_imges %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serv_catagory) %>:</strong></dt>
  <dd><%= @good.serv_catagory %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @good.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goods_catalog_id) %>:</strong></dt>
  <dd><%= @good.goods_catalog.name+"(id:#{@good.goods_catalog_id})" if @good.goods_catalog %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              goods_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_good_path(@good), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              good_path(@good),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
