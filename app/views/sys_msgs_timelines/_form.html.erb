<%= form_for @sys_msgs_timeline, :html => { :class => "form-horizontal sys_msgs_timeline" } do |f| %>

  <% if @sys_msgs_timeline.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sys_msgs_timeline.errors.count, "error") %> prohibited this sys_msgs_timeline from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sys_msgs_timeline.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :sys_msg_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sys_msg_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sys_msg_id) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= select_tag "sys_msgs_timeline[status]",
      options_for_select(tcl(@status_list,'Const::SysMsg::STATUS'),
      selected=tcl(@status_selected,'Const::SysMsg::STATUS')),{:class => "form-control"} %>
    </div>
    <%=f.error_span(:status) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sys_msgs_timelines_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
